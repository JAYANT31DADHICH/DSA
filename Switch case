#include<iostream>
using namespace std;
int main(){
    int n;
    cout <<"enter the amount:";
    cin >> n;
    int a,b,c,d,e,f,g,h,i;
    //int a=n%100;
    //cout << a;
    switch(1){
        case 1 : a=n/100;
                 n=n%100;
                 cout << "number of 100 notes are :"<< a << endl;
        
    
        case 2 : b=n/50;
                 n=n%50;
                 cout << "number of 50 notes are :"<< b << endl;
        
    
        case 3 : c=n/20;
                 n=n%20;
                 cout << "number of 20 notes are :"<< c<< endl;
        
        case 4 : d=n/10;
                 n=n%10;
                 cout << "number of 10 notes are :"<< d << endl;
        
    }
    return 0;
}




